@model MVCProyectoNFT.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Delete";
}

<br />

<h1>Eliminar</h1>

<br />

<h3>¿Esta seguro que desea borrar este usuario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdTipoUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionRol)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IdTipoUsuario == 1)
            {
                <span>Admin</span>
            }
            else if (Model.IdTipoUsuario == 2)
            {
                <span>Manager</span>
            }
            else if (Model.IdTipoUsuario == 3)
            {
                <span>Cajero</span>
            }
        </dd>
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contrasenna)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contrasenna)
        </dd> *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a href="/Usuario" class="btn btn-outline-primary">
            Volver
        </a>
    </form>
</div>
