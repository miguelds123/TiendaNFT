@model MVCProyectoNFT.Application.DTOs.AnularDTO

@{
    ViewData["Title"] = "Anular";
}

<br />

<h1>Anular Factura</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AnularFactura">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="button-container" style="display: flex; margin-top:20px">
                <div class="form-group" style="margin-right:10px">
                    <input type="submit" value="Anular" class="btn btn-danger" />
                </div>

                <div>
                    <a href="/Home" class="btn btn-outline-primary">
                        Volver
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
